FROM unidata/nctests:base32

RUN sudo apt-get update &&  sudo apt-get install -y mpich libmpich-dev && sudo apt-get -y autoclean && sudo rm -rf /var/lib/apt/lists/*

###
# Copy over provisioning script.
###

COPY provision_mpich_ubuntu.sh /root/
RUN sudo ls -alh /root && sudo /root/provision_mpich_ubuntu.sh

###
# Copy over the dockerfile, scripts and README.
###

COPY Dockerfile.mpich32 ${HOME}/

ENV PARTYPE -mpich

RUN sudo chown -R ${CUSER}:${CUSER} ${HOME}

##
# Run test scripts on launch.
##
CMD ${HOME}/run_par_tests.sh
